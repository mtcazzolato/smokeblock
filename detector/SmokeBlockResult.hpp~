#ifndef SMOKEBLOCKRESULT_HPP
#define SMOKEBLOCKRESULT_HPP

#include <opencv/cv.h>
#include <opencv/highgui.h>
#include <stdio.h>
#include <math.h>
#include <vector> /// std:vector
#include <utility> /// std::pair
#include <float.h>

using namespace std;

class SmokeBlockResult
{
public:
    /// Constructor
    SmokeBlockResult();
    /// Constructor
    SmokeBlockResult(vector< pair< pair<int, int>, pair<int, int> > >, int what);
    /// Destructor
    virtual ~SmokeBlockResult();
    /// Set resulting Minimum Bounding Rectangles, concerning the smoke regions
    void setResultingMBR(vector< pair< pair<int, int>, pair<int, int> > > mbrs);
    /// Get resulting Minimum Bounding Rectangles, concerning the smoke regions
    vector< pair< pair<int, int>, pair<int, int> > > getResultingMBR();
    /// Set resulting what tag
    void setResultingWhatTag(int what);
    /// Get resulting what tag
    int getResultingWhatTag();
    /// Set resulting (segmented) image
    void setResultingImage(IplImage *segmentedImage);
    /// Get resulting (segmented) image
    IplImage* getResultingImage();
    /// Set resulting colors
    void setResultingMeanColors(vector<CvScalar> colors);
    /// Get resulting RGB mean colors
    vector<CvScalar> getResultingBGRMeanColors();
    /// Get and Set resulting H, S and V color
    void setResultingHColor(vector< float > h);
    vector< float > getResultingHColor();
    void setResultingSColor(vector< float > s);
    vector< float > getResultingSColor();
    void setResultingVColor(vector< float > v);     
    vector< float > getResultingVColor();

private:
    /// MBRs coordinates of the identified smoke regions
    vector< pair< pair<int, int>, pair<int, int> > > mbrs;	
    /// "what" tag
    int what;
    /// Convert RGB to HSV color space values
    void RGB2HSV(CvScalar BGRcolor);

    /// H, S and V values. Each position of the vector corresponds to a MBR
    vector< float > hColors;
    vector< float > sColors;
    vector< float > vColors;
    /// Resulting Mean colors of RGB color space
    vector<CvScalar> resultingMeanColors;
    /// Resulting segmented image
    IplImage *segmentedImage;
};

#endif /* SMOKEBLOCKRESULT_HPP */